<div id="fileform-page">
  <div id="file-incident-form-div">
    <form action="/submit_incident" data-remote="true" method="post" class="file-incident-address-bar">
      <input type="text" name="address" id="incident-search" placeholder="Where did this happen?"><br>
      <textarea name="description" rows="14" id="incident-description" placeholder="What happened?"></textarea><br>
      <button id="submit-incident-button" type="submit">File Incident</button>
      <button id="submit-incident-back-button">Back</button>
    </form>
  </div>
</div>

<script>
	function activatePlacesSearch(){
		var input = document.getElementById('incident-search');
		var autocomplete = new google.maps.places.Autocomplete(input);
	}
</script>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_PLACES'] %>&libraries=places&callback=activatePlacesSearch"></script>