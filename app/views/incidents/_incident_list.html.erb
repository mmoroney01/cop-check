<%# Consider refactoring this for the if to be
if @incidents.empty?
  -> no incidents display 
else
--> display list of incidents%>

<div id="incidents-near-and-list">
  <div id="incidents-near">
    <% if !@incidents.empty? %>
      <br>
      <h4 class="incidents-near-text">Incidents near <%= @address %></h4>
    <% else %>
      <br>
      <h4 id="no-incidents">No incidents nearby!</h4>
    <% end %>
  </div>

  <div id="incident-list">
    <ul>
      <% @incidents.each do |incident| %>
        <div class="incident">
          <li><a href="/incident/<%= incident.id %>" data-remote="true"><%= incident.address %></a></li>
          <%= incident.description %>
          <div class="lat-lng" data-lat=<%= incident.latitude %> data-lng=<%= incident.longitude%>>
          </div>
        </div>
        <br>
      <% end %>
    </ul>
  </div>
